%li.span3
  .thumbnail
    %table.table-condensed
      %tr
        %td= image_tag item.images[:thumbnail].try(:url) || image_path("hot_plate.jpg")
        %td.span2= item.title
    .caption
      = form_tag unpick_item_path, method: :delete do
        = hidden_field_tag :item, item.to_json
        = submit_tag 'Unpick', class: "btn btn-warn btn-small"
